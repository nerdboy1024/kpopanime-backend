rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public read access for categories, products, and blog posts
    match /categories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /blog/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles
    match /users/{userId} {
      // Users can read/write their own profile, admins can access all
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Admin-only collections (orders, analytics, etc.)
    match /orders/{document=**} {
      allow read, write: if isAdmin();
    }

    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }

    match /settings/{document=**} {
      allow read, write: if isAdmin();
    }

    match /segments/{document=**} {
      allow read, write: if isAdmin();
    }

    // Any other collections - deny by default unless admin
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
